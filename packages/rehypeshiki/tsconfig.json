{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "shiki/*": ["node_modules/shiki/*"],
      "unified/*": ["node_modules/unified/*"]
    },
    "baseUrl": ".",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "preserveValueImports": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.mjs",
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
  ]
}
